<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="home.css">
   
</head>
<body>
    <h1>Employee Registration</h1>
    <form method="post" action="/">
        <label>Full Name</label>
        <input type="text" name="fn"/><br><br>
        <label style="text-align:left">Sex</label>
        <label>Male</label>
        <input type="radio" name="sex" value="Male">
        <label>Female</label>
        <input type="radio" name="sex" value="Female"><br><br>
        <label>Email</label>
        <input type="email" name="email"/><br><br>
        <label>City</label>
        <input type="text" name="city"/>
        <br><br>
        <button type="submit">Submit</button> 
        <button type="reset">Reset</button>
    </form>

        <table class="table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Last Name</th>
                    <th>Sex</th>
                    <th>Email</th>
                    <th>Home City</th>
                    <th colspan="2">Setting</th>
                </tr>
    
            </thead>
            
            <tbody>
                <% emp.forEach(function(mascot) { %>
               <tr>
                <td><%= mascot.firstName %></td>
                <td><%= mascot.MiddleName %></td>
                <td><%= mascot.LastName %></td>
                <td><%= mascot.gender %></td>
                <td><%= mascot.email %></td>
                <td><%= mascot.city %></td>
                <td><a href="edit/<%= mascot._id %>"><button>Edit</button></a></td>
                <td><a href="/<%= mascot._id %>" ><button>Delete</button></a></td>
               </tr>
               <% }); %> 
                
            </tbody>
            
        </table>

    
    
</body>
</html>